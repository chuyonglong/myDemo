    android:id="@+id/po_image"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    android:src="@android:color/darker_gray"
    app:allow_random_color="false"
    app:big_shine_color="#FF6666"
