<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <ImageView
        android:id="@+id/iv_image_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4CAF50"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <ImageView
        android:id="@+id/iv_image_two"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_one"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bt_click_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="click one"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/go_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_two" />

    <TextView
        android:id="@+id/go_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="go next"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_click_one"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_two" />

    <TextView
        android:id="@+id/bt_click_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="click two"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/bt_get_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_click_one" />

    <TextView
        android:id="@+id/bt_get_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="位置权限"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_click_two"
        app:layout_constraintTop_toBottomOf="@+id/bt_click_one" />

    <TextView
        android:id="@+id/bt_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="go back"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/get_media"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_click_two" />

    <TextView
        android:id="@+id/get_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="get media"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_go_back"
        app:layout_constraintTop_toBottomOf="@+id/bt_click_two" />

    <TextView
        android:id="@+id/get_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="get permission"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/get_permission_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_go_back" />

    <TextView
        android:id="@+id/get_permission_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#1A5EFF"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="get  alway"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/get_permission"
        app:layout_constraintTop_toBottomOf="@+id/bt_go_back" />

    <TextView
        android:id="@+id/text_show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:text="经纬度:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_permission" />

    <TextView
        android:id="@+id/text_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_show1"
        app:layout_constraintTop_toBottomOf="@+id/get_permission"
        tools:text="123" />


</androidx.constraintlayout.widget.ConstraintLayout>